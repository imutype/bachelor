\setbeamercolor{bibliography entry location}{fg=secondary}
\setbeamercolor{bibliography entry note}{fg=secondary!50!white}
\setbeamercolor{bibliography item}{fg=primary}
\setbeamertemplate{bibliography item}{\insertbiblabel\tiny}

\setbeamerfont{caption}{size=\scriptsize}
\setbeamercolor{caption name}{fg=primary}
\setbeamercolor{caption}{fg=secondary}
\setbeamertemplate{caption}[numbered]

