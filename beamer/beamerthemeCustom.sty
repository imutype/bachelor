\setbeamercolor{enumerate item}{fg=primary,bg=primary}
\setbeamercolor{enumerate subitem}{fg=primary,bg=primary}
\setbeamercolor{enumerate subsubitem}{fg=primary,bg=primary}
\setbeamercolor{enumerate mini template}{fg=primary,bg=primary}

\setbeamercolor{section number projected}{bg=primary}
\setbeamercolor{subsection number projected}{bg=primary}
\setbeamercolor{subsubsection number projected}{bg=primary}
